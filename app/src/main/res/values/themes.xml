<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatopApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_background_color</item>
        <!-- Customize your theme here. -->
        <item name="mainBackgroundColor">@color/light_background_color</item>
        <item name="calculatorBackgroundColor">@drawable/light_calculator_background</item>
        <item name="buttonBackgroundColor">@color/light_blue</item>
        <item name="textColor">@color/black</item>
        <item name="theme_icon">@drawable/light_icon</item>

    </style>
</resources>